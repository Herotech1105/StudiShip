<header>
    <nav>
        <a href="/" class="logo">StudyShip ðŸ“–</a>
        <div class="mobile-menu">
            <a href="/rooms/create">Erstellen</a>
            <a href="/search">Suchen</a>
            <form action="/logout" method="POST" class="logout-form">
                <button type="submit" class="logout-link-style">Abmelden</button>
            </form>
        </div>
        </div>
    </nav>
</header>
<body>
    <div class="container">
        <h1>Suche</h1>
        <form action="/search" method="POST">
            <div class="form-group">
                <label for="roomName">Lerngruppen Name</label>
                <input type="text" class="form-control" id="roomName" name="roomName">
                <label for="roomSubject">Kursart</label>
                <select class="form-control" id="roomSubject" name="roomSubject">
                    <option value="any">any</option>
                    {{#each subjects}}
                        <option value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>
                <button type="submit" class="btn btn-primary">Erstellen</button>
            </div>
        </form>
    </div>
</body>
